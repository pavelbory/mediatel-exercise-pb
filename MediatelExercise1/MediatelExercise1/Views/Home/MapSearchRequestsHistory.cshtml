@model PagedList.IPagedList<MediatelExercise1.Models.MapSearchRequestHistoryVM>
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<h2>@MediatelResources.ViewHeaderMapRequestsHistory</h2>

<table class="table">
    <tr>
        <th>@MediatelResources.MapSearchRequestHistoryVM_DateCreated_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_Email_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_Latitude_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_Longitude_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_ResultCode_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_Country_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_City_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_HouseNumber_DisplayLabel</th>
        <th>@MediatelResources.MapSearchRequestHistoryVM_PostCode_DisplayLabel</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("MapSearchRequestsHistory", new { page }))